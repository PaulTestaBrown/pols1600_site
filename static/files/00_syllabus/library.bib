doi = {10.2307/3132221},
file = {::},
journal = {The American Economic Review},
number = {2},
pages = {180--185},
publisher = {American Economic Association},
title = {{Optimal Defaults}},
url = {https://www.jstor.org/stable/3132221 https://pubs.aeaweb.org/doi/pdf/10.1257/000282803321947010},
